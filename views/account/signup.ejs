<div class="container"> 
        <h1>Register</h1> 
<% if (errors && errors.length > 0) { %> 
    <div class="error-message"> 
        <ul> 
            <% errors.forEach(e => { %> 
                <% if (typeof e === 'string') { %> 
                    <li><%= e %></li> 
                <% } else if (e && e.message) { %> 
                    <li><%= e.message %></li> 
                <% } else { %> 
                    <li><%= JSON.stringify(e) %></li> 
                <% } %> 
            <% }) %> 
        </ul> 
    </div> 
<% } %>
            
            <form class="form-floating mb-3" action="/signup" method="POST"> 
                <div class="form-group"> 
                    <label for="name">Name</label> 
                    <input class="form-control" type="text" id="name" name="name" value="<%= user? user.name: '' %>" required> 
                </div> 
                
                <div class="form-group"> 
                    <label for="email">Email</label> 
                    <input class="form-control"  type="email" id="email" name="email" value="<%= user? user.email: '' %>" required> 
                </div> 
                
                <div class="form-group"> 
                    <label for="password">Password</label> 
                    <input class="form-control"  type="password" id="password" name="password" value="<%= user? user.password: '' %>" required> 
                </div> 
                
                <div class="form-actions"> 
                    <button type="submit" class="w-100 btn btn-lg btn-primary mt-3">Register</button>  
                </div> 
            </form> 
        <div> 
            <a href="/signin" class="mt-5">Already have an account?</a>
            <br/> 
            <a href="/">Back to Home</a> 
        </div> 
        
    </div>