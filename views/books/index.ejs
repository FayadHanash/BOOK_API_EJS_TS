<a href="/books/create" class="btn btn-primary mb-3">Add New Book</a> 
<% if (books && books.length > 0) { %> 
    <table class="table table-striped"> 
        <thead> 
            <tr> 
                <th>Title</th> 
                <th>Author</th> 
                <th>ISBN</th> 
                <th>Year</th> 
                <th>Actions</th> 
            </tr> 
        </thead> 
        <tbody> 
            <% books.forEach(book => { %> 
                <tr> 
                    <td><%= book.title %></td> 
                    <td><%= book.author %></td> 
                    <td><%= book.isbn %></td> 
                    <td><%= book.publicationYear %></td> 
                    <td> 
                        <div style="display: flex; gap: 5px;">
                        <a href="/books/edit/<%= book.id %>" class="btn btn-sm btn-warning">Edit</a> 
                        <form action="/books/delete/<%= book.id %>" method="POST" style="margin: 0;" > 
                            <button type="submit" class="btn btn-sm btn-danger"  onclick="return confirm('Are you sure you want to delete this book?')">Delete</button> 
                        </form> 

                        </div>
                    </td> 
                </tr> 
            <% }); %> 
        </tbody> 
    </table> 
<% } else { %> 
    <p>No books found. <a href="/books/create">Add a book</a> to get started.</p> 
    <% } %> 
